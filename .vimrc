set encoding=utf-8
syntax on

set incsearch           " search as characters are entered
set hlsearch            " highlight matches

set number
set relativenumber

set expandtab	        " tabs are spaces
set tabstop=4           " tabs are 4 spaces
set shiftwidth=4

set noswapfile

set showmatch	        " highlight matching [{()}]

" move to beginning/end of line
nnoremap B ^
nnoremap E $
